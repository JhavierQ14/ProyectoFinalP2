
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Agregar Procductos</title>
    <link rel="stylesheet" href="~/css/DataPStyle.css" />
</head>
<body>
    <section class="order" id="order">

        <h3 class="sub-heading"> Registra un nuevo producto </h3>
       
        <form asp-controller="AgregarP" asp-action="Save" >

            <div class="inputBox">
                <div class="input">
                    <input type="hidden" value="@ViewBag.productoid" type="number">
                </div>
                <div class="input">
                    <span> Nombre del producto</span>
                    <input type="text" placeholder="nombre del producto">
                </div>
                <div class="input">
                    <span>Precio</span>
                    <input type="number" placeholder="Ingrese el precio del producto">
                </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <span>Fecha</span>
                    <input type="text" placeholder="Ingrese la fecha" readonly>
                </div>
               
            </div>
            <div class="inputBox">
                <div class="input">
                    <span>Estado Producto</span>
                    <input type="text" placeholder="Ingrese el estado del producto">
                </div>
                <div class="input">
                    <span>imagen</span>
                    <input type="text" placeholder="Ingrese la URL de la imagen">
                </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <span>Menú</span>
                    <input name="" placeholder="Ingrese el" >
                </div>
                
            </div>

            <input type="submit" value="Agregar" class="btn" >

        </form>

    </section>

</body>
</html>


