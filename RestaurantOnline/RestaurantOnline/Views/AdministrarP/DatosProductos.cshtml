@model RestaurantOnline.Entidades.tbl_Producto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Agregar Procductos</title>
    <link rel="stylesheet" href="~/css/DataPStyle.css" />
</head>
<body>
    <section class="order" id="order">

        <h3 class="sub-heading"> Registra un nuevo producto </h3>

        @using (Html.BeginForm("Save", "AdministrarP", FormMethod.Post))
        {

            <div class="inputBox">
                <div class="input">
                    <input name="producto_id" type="hidden" value="@ViewBag.productoid" type="number">
                </div>
                <div class="input">
                    <span> Nombre del producto</span>
                    <input name="nombreProducto" type="text" value="@ViewBag.nombreProducto" placeholder="nombre del producto">
                </div>
                <div class="input">
                    <span>Precio</span>
                    <input name="precioP" type="number" value="@ViewBag.preciop" placeholder="Ingrese el precio del producto">
                </div>
            </div>
            
            <div class="inputBox">
                <div class="input">
                    <span>Estado Producto</span>
                    <input name="estadoProducto" type="text" value="@ViewBag.estadoProducto" placeholder="Ingrese el estado del producto">
                </div>
                <div class="input">
                    <span>imagen</span>
                    <input name="imageP" type="text" value="@ViewBag.imageP" placeholder="Ingrese la URL de la imagen">
                </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <span>Menú</span>
                    <input name="menu_Fk" value="@ViewBag.menuFK" placeholder="Ingrese el número del menú">
                </div>

            </div>

            <input type="submit" value="Agregar" class="btn">

        }

    </section>

    @using (Html.BeginForm("DateProducts", "AdministrarP", FormMethod.Post))
    {


        @*@Html.DropDownListFor(a => a.StudentId, new SelectList(ViewBag.SList, "Value", "Text"), "Select a students", new { @class = "form-control" })*@
        <br />
        @Html.DropDownListFor( b => b.menu_Fk,new SelectList(ViewBag.MList, "Value", "Text"), "Selecciona una menú", new { @class = "form-control" })
        <br />
       
    }
    </body>
</html>


