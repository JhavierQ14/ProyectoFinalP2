@model List<RestaurantOnline.Entidades.tbl_User>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <h1 class="text-center">Administracion de usuarios</h1>
    <div class="text-center">
        <table class="table table-hover">
            <thead>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Telefono
            </th>
            <th>
                correoU
            </th>
            <th>
                Rol
            </th>
            <th>
                Asignar
            </th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.nombreU</td>
                        <td>@item.apellidoU</td>
                        <td>@item.telefonoU</td>
                        <td>@item.correoU</td>
                        <td>@item.TblRolUsuario.nombreRol</td>

                        <td>
                            <div class="container m-3">
                                @Html.ActionLink("Admin", "Actualizar", "Administracion", new { usuario_id = item.usuario_id }, new { @class = "btn btn-danger" })
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</body>

</html>