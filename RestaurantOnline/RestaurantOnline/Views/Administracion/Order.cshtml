@model List<RestaurantOnline.Entidades.tbl_Orden>

@{
    ViewData["Title"] = "Index";
}


<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <div class="text-center">
        <table id="mitabla" class="table table-dark table-striped">

            <thead>
                <tr>
                    <th>Estado</th>
                    <th>Fecha</th>
                    <th>Metodo de Pago</th>
                    <th>Tipo de documento</th>
                    <th>Cliente</th>
                    <th>Administrar</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var iteracion in Model)
                {
                    <tr>
                        <td>@iteracion.estadoOrden</td>
                        <td>@iteracion.fechaOrden</td>
                        <td>@iteracion.TblMetodoPago.nombreMetodo</td>
                        <td>@iteracion.TblDocumento.nombreDocumento</td>
                        <td>@iteracion.TblUser.nombreU @iteracion.TblUser.apellidoU</td>
                        <td>
                        <a class="btn btn-info" asp-controller="Administracion" asp-action="DetalleOrden" asp-route-orden_FK="@iteracion.orden_id">Ver Detalle</a>
                        <a class="btn btn-success" asp-controller="Administracion" asp-action="Confirmacion" asp-route-orden_id="@iteracion.orden_id">Enviar Venta</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>


</body>

</html>